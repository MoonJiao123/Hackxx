<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/downButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:layout_marginBottom="0dp"


        android:orientation="horizontal"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageButton
        android:id="@+id/upButton"
        android:layout_width="71dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"

        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:orientation="horizontal"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/shakeText"
        android:layout_centerInParent="true"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:orientation="vertical"

        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"


        android:orientation="vertical"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="227dp"
        android:layout_marginEnd="328dp"
        android:layout_marginRight="328dp"
        android:layout_toRightOf="@+id/shakeText"
        android:scaleX="-1"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/shakeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30dp"
        android:onClick="toggleShake"
        android:text="Shake The Phone" />

    <ImageButton
        android:id="@+id/lookLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upButton"

        android:layout_marginTop="54dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageButton
        android:id="@+id/lookRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shakeText"
        android:layout_centerInParent="true"
        android:layout_marginTop="67dp"

        android:scaleX="-1"
        app:srcCompat="@android:drawable/ic_menu_revert" />

</RelativeLayout>